                        </a>
                    </div>
                </div>
            `;
            document.getElementById('main-content').innerHTML = content;
        }

        // --- NAVIGATION LOGIC ---
        function navigate(targetId) {
            // Update UI State
            document.querySelectorAll('.nav-item').forEach(btn => {
                if(btn.dataset.target === targetId) {
                    btn.classList.add('active', 'bg-orange-50', 'text-orange-600', 'font-semibold');
                    btn.classList.remove('text-slate-600');
                } else {
                    btn.classList.remove('active', 'bg-orange-50', 'text-orange-600', 'font-semibold');
                    btn.classList.add('text-slate-600');
                }
            });

            // Destroy old chart instances to prevent canvas reuse errors
            if (marketChartInstance) { marketChartInstance.destroy(); marketChartInstance = null; }
            if (financialChartInstance) { financialChartInstance.destroy(); financialChartInstance = null; }

            // Render Section
            switch(targetId) {
                case 'overview': renderOverview(); break;
                case 'product': renderProduct(); break;
                case 'market': renderMarket(); break;
                case 'financials': renderFinancials(); break;
                case 'future': renderFuture(); break;
                default: renderOverview();
            }

            // Mobile menu close on click
            const sidebar = document.getElementById('sidebar');
            if (!sidebar.classList.contains('-translate-x-full') && window.innerWidth < 768) {
                sidebar.classList.add('-translate-x-full');
            }
        }

        // --- INITIALIZATION ---
        document.addEventListener('DOMContentLoaded', () => {
            // Initial Render
            renderOverview();

            // Mobile Menu Toggle
            document.getElementById('menu-btn').addEventListener('click', () => {
                const sidebar = document.getElementById('sidebar');
                sidebar.classList.toggle('-translate-x-full');
            });
        });

    </script>
</body>
</html>
