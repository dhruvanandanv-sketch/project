                    </div>
                </div>
            `;
            document.getElementById('main-content').innerHTML = content;

            // Initialize Chart
            const ctx = document.getElementById('marketChart').getContext('2d');
            marketChartInstance = new Chart(ctx, {
                type: 'radar',
                data: reportData.market.competitorData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        r: {
                            angleLines: { color: '#e5e7eb' },
                            grid: { color: '#e5e7eb' },
                            pointLabels: {
                                font: { size: 12, family: "'Outfit', sans-serif" },
                                color: '#475569'
                            },
                            suggestedMin: 0,
                            suggestedMax: 100
                        }
                    },
                    plugins: {
                        legend: { position: 'bottom' }
                    }
                }
            });
        }

        function renderFinancials() {
            const content = `
                <div class="fade-in max-w-5xl mx-auto">
                    <header class="mb-8">
                        <h2 class="text-3xl md:text-4xl font-serif font-bold text-slate-900 mb-4">${reportData.financials.title}</h2>
                        <p class="text-lg text-slate-600 leading-relaxed">${reportData.financials.intro}</p>
                    </header>

                    <!-- KPI Cards -->
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
                        ${reportData.financials.metrics.map(metric => `
                            <div class="bg-slate-800 rounded-lg p-6 text-white shadow-lg">
                                <p class="text-slate-400 text-xs uppercase tracking-wide">${metric.label}</p>
                                <p class="text-3xl font-bold my-2 text-orange-400">${metric.value}</p>
                                <p class="text-slate-300 text-sm opacity-80">${metric.desc}</p>
                            </div>
                        `).join('')}
                    </div>

                    <!-- Main Graph -->
                    <div class="bg-white rounded-xl shadow-sm border border-stone-200 p-6">
                        <div class="flex justify-between items-center mb-6">
                            <h3 class="font-bold text-slate-800">Growth Projections (5 Year Horizon)</h3>
                            <div class="flex gap-2">
                                <span class="text-xs flex items-center gap-1"><span class="w-3 h-3 rounded-full bg-orange-500"></span> Revenue</span>
                                <span class="text-xs flex items-center gap-1"><span class="w-3 h-3 rounded-full bg-slate-300"></span> Customers</span>
                            </div>
                        </div>
                        <div class="chart-container">
                            <canvas id="financialChart"></canvas>
                        </div>
                    </div>
                </div>
            `;
            document.getElementById('main-content').innerHTML = content;

            // Initialize Chart
            const ctx = document.getElementById('financialChart').getContext('2d');
            financialChartInstance = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: reportData.financials.chartData.labels,
                    datasets: [
                        {
                            label: 'Projected Revenue Index',
                            data: reportData.financials.chartData.revenue,
                            type: 'line',
                            borderColor: '#ea580c',
                            backgroundColor: 'rgba(234, 88, 12, 0.1)',
                            borderWidth: 3,
                            fill: true,
                            tension: 0.4,
                            yAxisID: 'y'
                        },
                        {
                            label: 'Customer Base Index',
                            data: reportData.financials.chartData.customers,
                            backgroundColor: '#cbd5e1',
                            borderRadius: 4,
                            yAxisID: 'y1'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    interaction: { mode: 'index', intersect: false },
                    scales: {
                        x: { grid: { display: false } },
                        y: { 
                            type: 'linear', 
                            display: true, 
                            position: 'left',
                            grid: { color: '#f1f5f9' },
                            title: { display: true, text: 'Revenue Growth Index' }
                        },
                        y1: { 
                            type: 'linear', 
                            display: true, 
                            position: 'right', 
                            grid: { display: false },
                            title: { display: true, text: 'Customer Volume' }
                        }
                    },
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.dataset.label + ': ' + context.raw;
                                }
                            }
                        }
                    }
                }
            });
        }

        function renderFuture() {
            const content = `
                <div class="fade-in max-w-4xl mx-auto">
